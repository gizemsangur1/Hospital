@using WebApplication7.Utility;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HospitalAppointment.com</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
               
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Anasayfa</a>
                        </li>
                        <ul class="navbar-nav">
                            <li class="nav-item dropdown">
                                <a class="nac-link dropdown-toggle" href="#" id="navbarDropdown" role="button">
                                    @Thread.CurrentThread.CurrentUICulture.Name
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" >Tr</a></li>
                                    <li><a class="dropdown-item">En</a></li>
                                </ul>
                            </li>
                        </ul>
                        @if (User.IsInRole(UserRoles.Role_Admin))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="DoctorBrans" asp-action="Index">Branşlar</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Doctor" asp-action="Index">Doktrolar</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Appointment" asp-action="Index">Randevu</a>
                            </li>
                        }

                        @if (User.IsInRole(UserRoles.Role_Patient))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Doctor" asp-action="Index">Randevu Al</a>
                            </li>
                        }


                    </ul>

                    <partial name="_LoginPartial" />


                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>