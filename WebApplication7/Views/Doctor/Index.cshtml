@using WebApplication7.Utility;
@model List<Doctor>

@{
    ViewData["Title"] = "Doktorlar";
}

@if (User.IsInRole(UserRoles.Role_Admin))
{
    if (TempData["basarili"] != null)
    {
        <h2 style="color:forestgreen">@TempData["basarili"]</h2>
    }

}

@if (User.IsInRole(UserRoles.Role_Patient))
{
    if (TempData["basarili1"] != null)
    {
        <h2 style="color:forestgreen">@TempData["basarili1"]</h2>
    }
}

<div class="container">
    <div class="row pt-3 pb-4">
        <div>
            <h1 class="text-primary">Doktorlar</h1>
        </div>
    </div>

    <table class="table table-bordered">

        <thead>


            <tr>

                <th class="text-primary">
                   Doktorlar
                </th>

                @if (User.IsInRole(UserRoles.Role_Admin))
                {
                    <th class="text-primary">
                        id
                    </th>
                }
                <th class="text-primary">
                    Doktor Adı
                </th>

                <th class="text-primary">
                   Poliklinik
                </th>

                <th class="text-primary">
                    Çalışma zamanları
                </th>

                <th class="text-primary">
                    Branşı
                </th>
                @if (User.IsInRole(UserRoles.Role_Patient))
                {
                    <th class="text-primary">
                       Randevu al
                    </th>
                }

                @if (User.IsInRole(UserRoles.Role_Admin))
                {
                    <th style="color:forestgreen">
                        Güncelle
                    </th>

                    <th class="text-danger">
                       Sil
                    </th>
                }

            </tr>


        </thead>


        <tbody>
            @foreach (var doktor in Model)
            {


                <tr>
                    @if (User.IsInRole(UserRoles.Role_Admin))
                    {
                        <td>@doktor.Id</td>
                    }
                    <td align="center" valign="middle">@doktor.DoctorName</td>
                    <td align="center" valign="middle">@doktor.DoctorBrans</td>
                    <td align="center" valign="middle">

                            @doktor.WorkingTimes

                                              
                    </td>
                    <td align="center" valign="middle">
                        
                            @doktor.DoctorBrans

                       
                        </td>
                    @if (User.IsInRole(UserRoles.Role_Patient))
                    {
                        <td align="center" valign="middle">
                            <a asp-controller="Randevu" asp-action="RandevuAl" asp-route-id="@doktor.Id" type="button" class="btn btn-success btn-sm"> Randevu al</a>
                        </td>
                    }

                    @if (User.IsInRole(UserRoles.Role_Admin))
                    {
                        <td align="center" valign="middle">
                            <a asp-controller="Doktor" asp-action="EkleGuncelle" asp-route-id="@doktor.Id" type="button" class="btn btn-success btn-sm">Güncelle</a>
                        </td>
                        <td align="center" valign="middle">
                            <a asp-controller="Doktor" asp-action="Sil" asp-route-id="@doktor.Id" type="button" class="btn btn-danger btn-sm"> Sil</a>
                        </td>
                    }

                </tr>
            }
        </tbody>

    </table>

    @if (User.IsInRole(UserRoles.Role_Admin))
    {
        <div class="row pt-3 pb-2">
            <div>
                <a asp-controller="Doktor" asp-action="EkleGuncelle" class="btn btn-lg btn-primary" type="button">Doktor Ekle</a>
            </div>
        </div>
     }



</div>