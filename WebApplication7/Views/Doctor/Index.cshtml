
@using WebApplication7.Utility;
@model List<Doctor>

@{
    ViewData["Title"] = "Doktorlar";
}

@if (User.IsInRole(UserRoles.Role_Admin))
{
    if (TempData["basarili"] != null)
    {
        <h2 style="color:forestgreen">@TempData["basarili"]</h2>
    }

}

@if (User.IsInRole(UserRoles.Role_Patient))
{
    if (TempData["basarili1"] != null)
    {
        <h2 style="color:forestgreen">@TempData["basarili1"]</h2>
    }
}

<div class="container">
    <div class="row pt-3 pb-4">
        <div>
            <h1 class="text-primary"> Doctors</h1>
        </div>
    </div>

    <table class="table table-bordered">

        <thead>


            <tr>

                <th class="text-primary">
                   Doctors
                </th>

                @if (User.IsInRole(UserRoles.Role_Admin))
                {
                    <th class="text-primary">
                        id
                    </th>
                }
                <th class="text-primary">
                 doktor adi
                </th>

                <th class="text-primary">
                  poliklinik
                </th>

                <th class="text-primary">
                   calisma gun ve saatleri
                </th>

                <th class="text-primary">
                   bransi
                </th>
                @if (User.IsInRole(UserRoles.Role_Patient))
                {
                    <th class="text-primary">
                        randevu al
                    </th>
                }

                @if (User.IsInRole(UserRoles.Role_Admin))
                {
                    <th style="color:forestgreen">
                       guncelle
                    </th>

                    <th class="text-danger">
                       sil
                    </th>
                }

            </tr>


        </thead>


        <tbody>
            @foreach (var doktor in Model)
            {


                <tr>
                    <td align="center" valign="middle">
                        
                    </td>
                    @if (User.IsInRole(UserRoles.Role_Admin))
                    {
                        <td>@doktor.Id</td>
                    }
                    <td align="center" valign="middle">@doktor.DoctorName</td>
                    <td align="center" valign="middle">@doktor.Polyclinic</td>
                    <td align="center" valign="middle">
                
                            @doktor.WorkingTimes
                      

                    </td>
                    <td align="center" valign="middle">
                    
                            @doktor.DoctorBrans?.Ad
                     

                    </td>
                    @if (User.IsInRole(UserRoles.Role_Patient))
                    {
                        <td align="center" valign="middle">
                            <a asp-controller="Appointment" asp-action="RandevuAl" asp-route-id="@doktor.Id" type="button" class="btn btn-success btn-sm"> randevu al</a>
                        </td>
                    }

                    @if (User.IsInRole(UserRoles.Role_Admin))
                    {
                        <td align="center" valign="middle">
                            <a asp-controller="Doctor" asp-action="EkleGuncelle" asp-route-id="@doktor.Id" type="button" class="btn btn-success btn-sm">guncelle</a>
                        </td>
                        <td align="center" valign="middle">
                            <a asp-controller="Doctor" asp-action="Sil" asp-route-id="@doktor.Id" type="button" class="btn btn-danger btn-sm"> sil</a>
                        </td>
                    }

                </tr>
            }
        </tbody>

    </table>

    @if (User.IsInRole(UserRoles.Role_Admin))
    {
        <div class="row pt-3 pb-2">
            <div>
                <a asp-controller="Doctor" asp-action="EkleGuncelle" class="btn btn-lg btn-primary" type="button">doktor ekle</a>
            </div>
        </div>
    }



</div>