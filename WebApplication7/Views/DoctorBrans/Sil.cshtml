@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer;
@model DoctorBrans

@{
    ViewData["Title"] = "Doktor Branşını Sil";
}

<form method="post">
    <input asp-for="Id" hidden />

    <div class="border p-3 mt-5">

        <div class="row pb-3">
            <h2 class="text" style="color:#311b63"> @Localizer["Delete"]</h2>
            </hr>
        </div>

        <div class="mb-3">
            <label asp-for="Ad" class="p-0">@Localizer["Specialty"]</label>
            <input asp-for="Ad" class="form-control" />
        </div>
        <button type="submit" class="btn btn-lg" style="background-color:#311b63;color:aliceblue;width:250px">@Localizer["Delete"]</button>

        <a asp-controller="DoctorBrans" asp-action="Index" class="btn btn-lg" style="background-color:#311b63;color:aliceblue;width:250px">
            @Localizer["BackToList"]
        </a>

    </div>
</form>

