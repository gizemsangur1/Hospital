@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer;
@model DoctorBrans

@{
    ViewData["Title"] = "Branş Adını Güncelle";
}

<form method="post">
    <input asp-for="Id" hidden />

    <div class="border p-3 mt-5">

        <div class="row pb-3">
            <h2 class="text-primary"> Güncelle</h2>
            </hr>
        </div>

        <div class="mb-3">
            <label asp-for="Ad" class="p-0">Branş adı</label>
            <input asp-for="Ad" class="form-control" />
            <span asp-validation-for="Ad" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-lg btn-primary" style="width:250px">Güncelle </button>

        <a asp-controller="DoctorBrans" asp-action="Index" class="btn btn-lg btn-primary" style="width:250px">
           Listeye dön
        </a>

    </div>
</form>

